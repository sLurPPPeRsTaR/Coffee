{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true, // This also ignores *.d.ts outside of node_modules
    "baseUrl": ".",
    "paths": {
      "@api/*": ["./src/api/*"],
      "@action-creators/*": ["./src/action-creators/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@constants/*": ["./src/constants/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@navigations/*": ["./src/navigations/*"],
      "@slices/*": ["src/slices/*"],
      "@screens/*": ["./src/screens/*"],
      "@selectors/*": ["./src/selectors/*"],
      "@services/*": ["./src/services/*"],
      "@stores/*": ["./src/stores/*"],
      "@styles/*": ["./src/styles/*"],
      "@types/*": ["./src/types/*"],
      "@utils/*": ["./src/utils/*"],

      "@api": ["./src/api"],
      "@action-creators": ["./src/action-creators"],
      "@components": ["./src/components"],
      "@constants": ["./src/constants"],
      "@hooks": ["./src/hooks"],
      "@navigations": ["src/navigations"],
      "@slices": ["src/slices"],
      "@screens": ["./src/screens"],
      "@selectors": ["./src/selectors"],
      "@services": ["./src/services"],
      "@stores": ["./src/stores"],
      "@styles": ["./src/styles"],
      "@types": ["./src/types"],
      "@utils": ["./src/utils"]
    }
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
